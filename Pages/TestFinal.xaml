<Page x:Class="Tests_application.Pages.TestFinal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tests_application.Pages" xmlns:local1="clr-namespace:Tests_application" xmlns:local2="clr-namespace:Tests_application.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestFinal" Loaded="Window_OnLoaded">

    <Page.Resources>
        <local2:PercentConvert x:Key="PercentConvert"/>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock  TextAlignment="Center" Text="Результаты теста:" FontSize="36" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20">
            <Grid  Background="#FFE6E6E6" VerticalAlignment="Center">
                <local:SemicircleProgressBar x:Name="Progress1"
                    Value="0" Minimum="0" Maximum="100"
                    CuttingFactor="0.8"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Height="171" Width="276" Background="#FFFFFEFE"/>
                <TextBlock  TextAlignment="Center" FontSize="36" x:Name="ResBlock" Text="{Binding ResForText, Converter={StaticResource PercentConvert}}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            </Grid>
            <StackPanel Margin="200,0,0,0" VerticalAlignment="Center">
                <TextBlock Height="42" Text="Ваша оценка:" TextAlignment="Center" FontSize="36" Margin="0,0,0,40"/>
                <TextBlock Height="94" Width="159" Text="" TextAlignment="Center" FontSize="72" Background="White" Foreground="#FFF1F1F1" x:Name="Grade"/>
            </StackPanel>
        </StackPanel>
  
        <Button Grid.Row="2" Content="В меню" FontSize="24" Click="Button_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Height="40" Width="100"/>
    </Grid>
</Page>
