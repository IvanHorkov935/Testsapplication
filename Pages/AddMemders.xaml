<Page x:Class="Tests_application.Pages.AddMemders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tests_application.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMemders">

    <Grid Background="White" Height="450">
        <Button Margin="10,10,642,390" Content="Назад" FontSize="22"/>
        <StackPanel Margin="242,10,220,390" Orientation="Horizontal">
            <TextBlock Width="93" Text="Группа:" TextAlignment="Center" Height="28" FontSize="18"/>
            <TextBlock Width="76" FontSize="18" Height="28" TextAlignment="Left" Text="{Binding}"/>
        </StackPanel>
        <Button Height="50" Margin="644,10,10,390" Content="Сохранить" FontSize="20"/>

        <ComboBox Margin="625,88,10,331"/>
        <TextBlock Margin="514,92,180,335" Text="Руководитель:" FontSize="16"/>
        <TextBlock Margin="10,88,642,335" Text="Нераспределенные:" FontSize="16"/>

        <ListBox Margin="10,120,482,10" x:Name="ListUnallocated">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="ФИО:" Margin="3" FontSize="14" />
                        <TextBlock Text="{Binding Full_Name}" Margin="3" FontSize="14" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
