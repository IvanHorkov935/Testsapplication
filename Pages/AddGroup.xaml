<Page x:Class="Tests_application.Pages.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tests_application.Pages"
        mc:Ignorable="d"
        Title="AddGroup" d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Введите название новой группы:" FontSize="14"  Grid.ColumnSpan="2" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <TextBox  FontSize="14" Grid.ColumnSpan="2"  x:Name="gname" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="300" Height="30"/>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Right"  Width="195" Grid.Column="1" VerticalAlignment="Bottom" Height="35">
            <Button  Click="Accept_Click" MinWidth="60" Margin="0,0,10,0" Width="90" Height="30" FontSize="16">OK</Button>
            <Button  MinWidth="60" Width="90" Height="30" FontSize="16" Click="Cancel_Click">Отмена</Button>
        </WrapPanel>
    </Grid>
</Page>
